<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/game_IMG_heart1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/game_IMG_heart2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/game_IMG_heart3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_heart" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="000"
            android:textSize="48sp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/HorizontalDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/game_IMG_cell0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>
    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/game_IMG_cell12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

        <ImageView
            android:id="@+id/game_IMG_cell14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View style="@style/VerticalDivider"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/game_BTN_arrowUp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@color/material_on_primary_disabled"
                android:src="@drawable/ic_arrowup" />

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/game_BTN_arrowLeft"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/ic_arrowleft"
                android:background="@color/material_on_primary_disabled"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/game_BTN_arrowRight"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/material_on_primary_disabled"
                android:src="@drawable/ic_arrowright"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/game_BTN_arrowDown"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@color/material_on_primary_disabled"
                android:src="@drawable/ic_arrowdown" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>